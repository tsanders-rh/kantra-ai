# Containerfile for kantra-ai web interactive planner
# Compatible with Podman and Docker

# Build stage
FROM golang:1.22-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git make

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o kantra-ai ./cmd/kantra-ai

# Runtime stage
FROM alpine:latest

# Install ca-certificates for HTTPS
RUN apk --no-cache add ca-certificates

# Create non-root user
RUN addgroup -g 1000 kantra && \
    adduser -D -u 1000 -G kantra kantra

WORKDIR /home/kantra

# Copy binary from builder
COPY --from=builder /app/kantra-ai /usr/local/bin/kantra-ai

# Change ownership
RUN chown -R kantra:kantra /home/kantra

# Switch to non-root user
USER kantra

# Expose web interface port
EXPOSE 8080

# Default command - can be overridden
CMD ["kantra-ai", "--help"]
